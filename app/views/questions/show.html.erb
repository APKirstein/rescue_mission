<h1><%= @question.title %></h1>
<p><%= @question.description %></p>

<%= form_for [ @question, @answer ] do |f| %>

  <%= f.label "Answer" %>
  <%= f.text_field :body %>

  <%= f.submit "Submit Answer" %>
<% end %>

<%= link_to "Update Question", edit_question_path %>
<%= button_to("Delete Question", {:controller => :questions, :action => :destroy, :id => @question.id},  method: :delete, data: { confirm: "Are you sure?" }) %>

<ul>
  <% unless @answers.first.nil? %>
    <% @answers.each do |answer| %>
      <li><%= answer.body %></li>
    <% end %>
  <% end %>
</ul>

<a href= "/questions" >Back to Questions</a>
